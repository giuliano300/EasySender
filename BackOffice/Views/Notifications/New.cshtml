@model BackOffice.Models.Notifications

@using Microsoft.Ajax.Utilities

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper mb-0">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">@ViewBag.headerPage Notifica</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Home">Home</a>
                        </li>
                        <li class="breadcrumb-item active">
                           @ViewBag.headerPage Notifica
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-wrapper pt-0">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-1">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        @using (Html.BeginForm("Save", "Notifications", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Titolo</label>

                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => Model.title, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => Model.title)
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Descrizione</label>
                                <div class="col-sm-12">
                                    @Html.TextAreaFor(m => Model.description, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">
                                    Messaggio di Poste <br />
                                    <small class="text-navy">Seleziona se vuoi che sia un messaggio di Poste Italiane</small>
                                </label>

                                <div class="col-sm-12">
                                    <input type="checkbox"  class="switchery" data-switchery="true" name="chkPoste" @if ((int)Model.notificationType == 1) { <text> checked </text> } /><i></i>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">
                                    Abilitato <br />
                                    <small class="text-navy">Seleziona se vuoi che la notifica sia Visibile</small>
                                </label>

                                <div class="col-sm-12">
                                    <input type="checkbox" class="switchery" data-switchery="true" name="enabled" @if (Model.enabled) { <text> checked </text> } /><i></i>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-black" type="button" onclick="javascript: location.href = '/Notifications'">Cancella</button>
                                    <button class="btn btn-primary" type="submit">Salva Notifica</button>
                                </div>
                            </div>
                            @Html.HiddenFor(m => Model.id)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
