
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Campagne DM</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
            </li>
            <li class="active">
                <strong>Campagne DM</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>Campagne DM</h3>
                </div>
                <div class="ibox-content relative">
                    <div class="processing"><p>caricamento in corso...</p></div>
                    <table class="table table-striped table-bordered table-hover dataTables">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Utente</th>
                                <th>Inizio Campagna</th>
                                <th>Prodotto</th>
                                <th>Quantità</th>
                                <th>Tipo</th>
                                <th>Pagato</th>
                                <th>Totale</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

<style>
    .btn-group{
        position:absolute!important;
    }

</style>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            getTable();
        });

        function getTable() {
            $('.processing').show();
            var buttonCommon = {
                exportOptions: {
                    format: {
                        body: function (data, row, column, node) {
                            return column === 5 ?
                                data.replace(/[$,]/g, '') :
                                data;
                        }
                    }
                }
            };
            var table = $('.dataTables').DataTable();
            var data;
            $.getJSON("/Scripts/api/configuration.json", function (c) {
                $.get(c.apiurl + "api/Dm/All",
                function (f) {
                    table.destroy();
                    $('.processing').hide();
                    table = $('.dataTables').DataTable({
                        "order": [[0, "desc"]],
                        "pageLength": 50,
                        data: f,
                        "columns": [
                            { "data": "dmId" },
                            {
                                "data": function (data) {
                                    return data.user.name + ' ' + data.user.lastName + ' ' + data.user.businessName
                                }
                            },
                            {
                                "data": "dmDate",
                                "render": function (data) {
                                    return new Date(data).toLocaleDateString();
                                }
                            },
                            { "data": "product" },
                            { "data": "numberOfNames" },
                            { "data": "recipientsTypePublicName" },
                            {
                                "data": function (data) {
                                    return (data.paid === true ? "<a onclick='signPaid(0, " + data.dmId + ")' class='green'>SI</a>" : "<a onclick='signPaid(1, " + data.dmId + ")' class='red'>NO</a>");
                                }
                            },
                            { "data": "totalPrice" }
                        ],
                        dom: 'Bfrtip',
                        buttons: [
                            $.extend(true, {}, buttonCommon, {
                                extend: 'excelHtml5'
                            }),
                            $.extend(true, {}, buttonCommon, {
                                extend: 'pdfHtml5'
                            })
                        ]
                    });

                    });
            });
        }

        function signPaid(paid, id) {
            if (paid === 1) {
                $.getJSON("/Scripts/api/configuration.json", function (c) {
                    $.get(c.apiurl + "api/Dm/SignPaid?id=" + id, function (res) {
                        getTable()
                    })
                });
            }
            if (paid === 0) {
                $.getJSON("/Scripts/api/configuration.json", function (c) {
                    $.get(c.apiurl + "api/Dm/UnSignPaid?id=" + id, function (res) {
                        getTable()
                    })
                });
            }
        }
   </script>
}
