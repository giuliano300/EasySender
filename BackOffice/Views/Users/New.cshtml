                                        <label>Codice contratto COL</label>
                                        @Html.TextBoxFor(m => Model.CodiceContrattoCOL, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Codice contratto MOL</label>
                                        @Html.TextBoxFor(m => Model.CodiceContrattoMOL, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

