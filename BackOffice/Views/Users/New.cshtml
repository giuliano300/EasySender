                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ragione Sociale</label>
                                        @Html.TextBoxFor(m => Model.businessName, new { @class = "form-control businessName" })
                                        @Html.ValidationMessageFor(m => Model.businessName)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nome</label>
                                        @Html.TextBoxFor(m => Model.name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => Model.name)
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Cognome</label>
                                        @Html.TextBoxFor(m => Model.lastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => Model.lastName)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Indirizzo</label>
                                        @Html.TextBoxFor(m => Model.address, new { @class = "form-control address" })
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Cap</label>
                                        @Html.TextBoxFor(m => Model.cap, new { @class = "form-control cap" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Città</label>
                                        @Html.TextBoxFor(m => Model.city, new { @class = "form-control city" })
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Provincia</label>
                                        @Html.TextBoxFor(m => Model.province, new { @class = "form-control province" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
