                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <input type="checkbox" class="switchery float-right" data-switchery="true" name="sso" @if ((bool)Model.sso) { <text> checked </text> } /><i></i>
                                    </div>
                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>
                            <h4 class="form-section"><i class="ft-user"></i> Dati per invio</h4>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
