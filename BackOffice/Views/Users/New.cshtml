                                        <input type="checkbox" class="switchery float-right" data-switchery="true" name="rendicontazioneFatture" @if ((bool)Model.rendicontazioneFatture) { <text> checked </text> } /><i></i>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Accesso Sso</label><br />
