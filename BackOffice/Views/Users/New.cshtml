<script type="text/javascript">
    $(document).ready(function () {

        $('.expireDate').click(function () {
            $(this).attr('type', 'date');
        });

        $('.insertDate').click(function () {
            $(this).attr('type', 'date');
        });        

        GetUserParent();

        $('.parentId').on('change', function () {
            SetDefaultValue($(this).val());
        });

        $('.piva').on('change', function () {
            $.get("https://apinew.easysender.it/api/Vies?vatNumber=" + $('.piva').val(),
                function (f) {
                    if (f.Body.valid === true) {

                        var address = f.Body.address.split('\n');
                        var capcityprovince = address[1].split(" ");
                        $('.address').val(address[0]);
                        $('.cap').val(capcityprovince[0]);
                        $('.city').val(capcityprovince[1]);
                        $('.province').val(capcityprovince[2]);

                        $('.response-piva').removeClass('error');
                        $('.response-piva').addClass('valid');
                        $('.response-piva').html('partita iva valida');
                        $('.businessName').val(f.Body.name.split('!!')[0]);
                    }
                    else {
                        $('.response-piva').removeClass('valid');
                        $('.response-piva').addClass('error');
                        $('.response-piva').html('partita iva non valida');
                        $('.businessName').val('');
                        $('.address').val('');
                        $('.cap').val('');
                        $('.city').val('');
                        $('.province').val('');
                    }
                })
        })
    });

    function GetUserParent() {
        $.getJSON("/Scripts/api/configuration.json", function (c) {
            $.get(c.apiurl + "api/Users",
                function (f) {
                    for (var x = 0; x < f.length; x++) {
                        $('.parentId').append('<option value=' + f.id + '>' + f[x].name + ' ' + f[x].lastName + ' - ' + f[x].businessName + '</option>');
                    }
                })
        })
    }

    function SetDefaultValue() {
        $('.userPriority').empty();
        $.getJSON("/Scripts/api/configuration.json", function (c) {
            $.get(c.apiurl + "api/Users",
                function (f) {
                    for (var x = 0; x < f.length; x++) {
                        $('.parentId').append('<option value=' + f.id + '>' + f[x].name + ' ' + f[x].lastName + ' - ' + f[x].businessName + '</option>');
                    }
                })
        })
    }
</script>

