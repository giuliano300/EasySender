                                        <input type="checkbox" class="switchery float-right" data-switchery="true" name="mol" @if (Model.mol) { <text> checked </text> } /><i></i>
                                    </div>
                                </div>

                            </div>

                            <div class="hr-line-dashed"></div>

                            <div class="row">
