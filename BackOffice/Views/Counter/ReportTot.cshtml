
@{
    ViewBag.Title = "ReportTot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper mb-0">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Report invii</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Home">Home</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Report invii totali
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-wrapper pt-0">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-1 filter">

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <a class="add">Report Invii Totali</a>
                        <a class="back total"></a>
                    </div>
                    <div class="ibox-title">
                        <select name="users" class="userId">
                            <option value="">Seleziona un utente</option>
                        </select>
                        <input type="date" name="startDate" class="startDate" />
                        <input type="date" name="endDate" class="endDate" />
                       
                        <input type="button" onclick="ReloadData()" value="filtra" />
                    </div>
                </div>

            </div>

            <div class="card mb-1 filter">
                <div class="ibox-content relative">
                    <div class="processing"><p>caricamento in corso...</p></div>
                    <table class="table table-striped table-bordered table-hover dataTables">
                        <thead>
                            <tr>
                                <th>Proprietà</th>
                                <th>Cliente</th>
                                <th>Numero Rol</th>
                                <th>Prezzo Rol</th>
                                <th>Numero Lol</th>
                                <th>Prezzo Lol</th>
                                <th>Numero Tol</th>
                                <th>Prezzo Tol</th>
                                <th>Numero Mol</th>
                                <th>Prezzo Mol</th>
                                <th>Numero Col</th>
                                <th>Prezzo Col</th>
                                <th>Numero Vol</th>
                                <th>Prezzo Vol</th>
                                <th>Invii Totali</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .btn-group {
        position: absolute !important;
    }
</style>
<script src="~/Scripts/jquery.session.js"></script>
<script src="/app-assets/vendors/js/tables/datatable/datatables.min.js"></script>

<script type="text/javascript">

    Array.prototype.sum = function (prop) {
        var total = 0
        for (var i = 0, _len = this.length; i < _len; i++) {
            total += this[i][prop]
        }
        return total
    }

    function ReloadData() {
        var filter = "?id=0";
        if ($('.userId').val() != "")
            filter += "&userId=" + $('.userId').val();

        if ($('.startDate').val() != "")
            filter += "&startDate=" + $('.startDate').val();

        if ($('.endDate').val() != "")
            filter += "&endDate=" + $('.endDate').val();

        getTable(filter);

    }

    $(document).ready(function () {
        var f = $.session.get('FilterInvii');
        if (f === undefined)
            f = "";
        getTable(f);
        GetUsers();
    });

    function getTable(filter) {
        $('.processing').show();
        var buttonCommon = {
            exportOptions: {
                format: {
                }
            }
        };
        var table = $('.dataTables').DataTable();
        var data;
        $.getJSON("/Scripts/api/configuration.json", function (c) {
            $.get(c.apiurl + "api/Backoffice/SplitSend" + filter,
                function (f) {
                    table.destroy();
                    $('.processing').hide();
                 
                    table = $('.dataTables').DataTable({
                        "bInfo": false,
                        "order": [[0, "asc"]],
                        "pageLength": 100,
                        data: f,
                        "columns": [
                            { "data": "Canale" },
                            { "data": "nomeUtente" },
                            { "data": "Rol" },
                            { "data": "PriceRol" },
                            { "data": "Lol" },
                            { "data": "PriceLol" },
                            { "data": "Tol" },
                            { "data": "PriceTol" },
                            { "data": "Mol" },
                            { "data": "PriceMol" },
                            { "data": "Col" },
                            { "data": "PriceCol" },
                            { "data": "Vol" },
                            { "data": "PriceVol" },
                            { "data": "Total"},
                        ],
                        dom: 'Bfrtip',
                        buttons: [
                            $.extend(true, {}, buttonCommon, {
                                extend: 'excelHtml5'
                            }),
                            $.extend(true, {}, buttonCommon, {
                                extend: 'pdfHtml5'
                            })
                        ],
                    });

                });
        });
    }

    function GetUsers() {
        $.getJSON("/Scripts/api/configuration.json", function (c) {
            $.get(c.apiurl + "api/Backoffice/Users", function (res) {
                for (var x = 0; x < res.length; x++) {
                    $('.userId').append('<option value="' + res[x].user.id + '">' + res[x].user.businessName + ' ' + res[x].user.name + ' ' + res[x].user.lastName + '</option>')
                }
            });
        })
    }
</script>
