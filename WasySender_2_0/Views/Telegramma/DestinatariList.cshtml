@model IEnumerable<WasySender_2_0.DataModel.GetLists>

@{
    ViewBag.Title = "DestinatariList";
}

<div class="col-lg-12">
    <div class="content-breadcrumb"><a href="/Home/Dashboard/">DASHBOARD</a> / <a href="/Corrispondenza/ProdottiPostali">CORRISPONDENZA</a> / <a href="/Telegramma">TELEGRAMMA</a> / RUBRICA</div>
</div>

<div class="default-page">
    <div class="col-lg-12">
        <section>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1>SCEGLI I DESTINATARI PER LA SPEDIZIONE</h1>
                    <h2>Seleziona i destinatari direttamente dalla tua rubrica oppure carica una nuova lista.</h2>
                </div>
            </div>
            <div class="row">
                <div class="telegramma" style="padding:0px!important">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <label>SELEZIONA LISTA</label>
                        <select name="destinatari" class="destinatari">
                            <option value="">Selezionare una lista</option>
                            @foreach (var l in Model)
                            {
                                <option value="@l.id">@l.name - @l.date</option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6"></div>
                    <div class="col-lg-4 col-md-4 col-sm-6"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="content-table-responsive">
                        <div class="telegramma-list-grid">
                            <ul>
                                <li class="top-grid" style="width:80px"><input type='checkbox' value='' name='selectItemTop' class="selectItemTop" onclick="SelectAll()" /></li>
                                <li class="top-grid">RAGIONE SOCIALE</li>
                                <li class="top-grid">NOME E COGNOME</li>
                                <li class="top-grid">INDIRIZZO</li>
                                <li class="top-grid">CAP</li>
                                <li class="top-grid">CITT&Agrave;</li>
                                <li class="top-grid" style="width:175px">PROVINCIA</li>
                            </ul>
                            <span class="parent"></span>
                            <div class="nothing">
                                nessun destinatario selezionato
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="nav-step">
                    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <a href="/Telegramma"><img src="~/Images/IcnPrev.png" /> INDIETRO</a>
                            </div>
                            <div class="col-lg-6">
                                <a onclick="ValidateList()">PROSEGUI <img src="~/Images/IcnNext.png" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<input type="hidden" name="Sender" value="@Request.QueryString["Sender"]" class="Sender" />
<input type="hidden" name="RicevutaRitorno" value="@Request.QueryString["RicevutaRitorno"]" class="RicevutaRitorno" />
<script>
    $(function () {
        $('.destinatari').on("change", function () {
            var l = $(this).val();
            if (l === "") {
                $('.nothing').show();
                var parent = $('.parent');
                parent.empty();
            }
            else {
                $.get("/Telegramma/GetList?id=" + l, function (r) {
                    var res = jQuery.parseJSON(r);
                    $('.nothing').hide();
                    var parent = $('.parent');
                    parent.empty();
                    $.each(res.recipients, function (i, item) {
                        var ul = "<ul>" +
                            "<li style='width:80px; padding:10px 0'><input type='checkbox' value='" + item.id + "' name='selectItem' class='selectItem' /></li>" +
                            "<li>" + item.businessName + "</li>" +
                            "<li>" + item.name + " " + item.surname + "</li>" +
                            "<li>" + item.dug + " " + item.address + " " + item.houseNumber + "</li>" +
                            "<li>" + item.cap + "</li>" +
                            "<li>" + item.city + "</li>" +
                            "<li style='width:175px'>" + item.province + "</li>" +
                            "</ul>";
                        parent.append(ul);
                    });
                    showLabel();
                    showTextBox();
                })
            }
        })
    })

    function SelectAll() {
        if ($('.selectItemTop').is(":checked"))
            $('.selectItem').prop("checked", true);
        else
            $('.selectItem').prop("checked", false);
    }

    function ValidateList() {
        if ($('.destinatari').val() == "") {
            alert("Selezionare una lista.");
        }
        else {
            var ids = [];
            $.each($('.parent ul'), function (i, item) {
                if ($(".selectItem", item).is(":checked")) {
                    ids.push($(".selectItem", item).val() + "|" + $(".labelfileName", item).html())
                }
            });
            if (ids.length == 0) {
                alert("Selezionare almeno un nominativo.");
            }
            else {
                $.post("/Telegramma/CreateDestinatari", {
                    listId: $('.destinatari').val(),
                    ids: ids
                }, function (s) {
                    if (s == "") {
                        location.href = "/Home/Error500";
                    }
                    else
                        location.href = "NewMessage?ListId=" + s + "&Sender=" + $(".Sender").val() + "&RicevutaRitorno=" + $(".RicevutaRitorno").val()
                })
            };
        }
    }


</script>

