@model IEnumerable<WasySender_2_0.Models.Sender>
@using WasySender_2_0.Models

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <div class="content-breadcrumb"><a href="/Home/Dashboard/">DASHBOARD</a> / <a href="/Corrispondenza/ProdottiPostali">CORRISPONDENZA</a> / TELEGRAMMA</div>
</div>

<div class="default-page">
    <div class="col-lg-12">
        <section>
            @using (Html.BeginForm("GotoStep2", "Telegramma", FormMethod.Post, new { @class = "request-form" }))
            {
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h1>TELEGRAMMA</h1>
                        <h2>Selezionare il mittente e le opzioni.</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="telegramma">
                        @if (Convert.ToInt32(Request.QueryString["id"]) == (int)ProductType.semplice)
                        {
                            <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
                                <label>SELEZIONA IL MITTENTE</label>
                                <select name="Sender" required>
                                    <option value="" selected>Seleziona--</option>
                                    @foreach (var s in Model)
                                    {
                                        <option value="@s.id">@s.businessName  @s.name  @s.surname</option>
                                    }
                                </select>
                            </div>
                        }
                        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
                            <div class="box-option">
                                <h6>
                                    <img src="~/Images/IcnRicevutaRitorno.png" />
                                    <span>RICEVUTA DI RITORNO</span>
                                </h6>
                                <ul>
                                    <li>
                                        <label><input type="radio" name="RicevutaRitorno" value="@Convert.ToInt32(RicevutaDiRitorno.Si)" required />&nbsp;&nbsp;SI</label>
                                    </li>
                                    <li>
                                        <label><input type="radio" name="RicevutaRitorno" value="@Convert.ToInt32(RicevutaDiRitorno.No)" required />&nbsp;&nbsp;NO</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="nav-step">
                        <div class="col-lg-4 col-lg-offset-5 col-md-4 col-md-offset-5">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="submit">PROSEGUI <img src="~/Images/IcnNext.png" /></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="type" value="@Convert.ToInt32(Request.QueryString["id"])" />
            }
        </section>
    </div>
</div>

