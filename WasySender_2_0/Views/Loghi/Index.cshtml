@model IEnumerable<WasySender_2_0.Models.Loghi>

@{
    ViewBag.Title = "Destinatari";
}

<div class="col-lg-12">
    <div class="content-breadcrumb"><a href="/Home/Dashboard/">DASHBOARD</a> / LOGHI</div>
</div>

<div class="default-page">
    <div class="col-lg-12">
        <section>
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 text-center">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>PERSONALIZZAZIONE COVER</h1>
                            <article>
                                In quest’area puoi aggiungere e modificare l'elenco dei tuoi loghi(che puoi allegare alle spedizioni).
                            </article>
                        </div>
                        <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4">
                            <a class="generic-btn" href="/Loghi/AddLogo">AGGIUNGI LOGO</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="content-table-responsive" style="margin-top:10px;">
                        <div class="destinatari-grid">
                            <ul>
                                <li style="width:40%">Nome</li>
                                <li style="width:40%">Logo</li>
                                <li style="width:20%">Elimina</li>
                            </ul>

                            @if (Model != null)
                            {
                                foreach (var l in Model)
                                {
                                    <ul>
                                        <li style="width:40%">@l.name</li>
                                        <li style="width:40%"><img src="~/Upload/Loghi/@l.logo" height="24" /></li>
                                        <li style="width:20%"><a href="#" id="del-@l.id" class="btn-delete"><img src="~/Images/IcnDelete.png" /></a></li>
                                    </ul>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script>
    $('.btn-delete').on("click", function () {
        var btnId = $(this).attr("id");
        var id = btnId.split("-")[1];
        var div = $('.destinatari-grid');
        if (confirm("Sei sicuro di voler eliminare il logo?")) {
            $.get("/Loghi/Delete?id=" + id)
                .done(function () {
                    var p = $("#" + btnId).parents("ul");
                    p.slideUp(400);
                });
        };
    });

</script>



