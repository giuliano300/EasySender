                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-6 col-lg-offset-4">
                                    <label>Nome Logo<em>(non compare in nessuna comunicazione ma serve a te per recuperarlo)</em></label>
                                    <input type="text" name="name" required />
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-lg-offset-4">
                                    <label>Logo <em>(formato jpg, png, jpeg, gif)</em></label>
                                    <input type="file" name="logo" required />
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-lg-offset-4">
                                    <input type="submit" name="save" value="INSERISCI" />
                                </div>
                                <div class="col-lg-12">
                                    <div class="error-msg"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
