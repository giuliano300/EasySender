@model  WasySender_2_0.DataModel.TotalNamesPrice
@{
    ViewBag.Title = "RiepilogoPreventivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery.countdown.js"></script>
<div class="col-lg-12">
    <div class="content-breadcrumb">DASHBOARD / CORRISPONDENZA / LETTERA / SELEZIONA DESTINATARI / RIEPILOGO E SPEDIZIONE</div>
</div>

<div class="default-page">
    <div class="col-lg-12">
        <section>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1>CALCOLO PREVENTIVO</h1>
                </div>
            </div>
            <div class="row">
                <div class="raccomandata">
                    <div class="col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="box-message">
                                    <h6>SEI PRONTO A SPEDIRE.</h6>
                                    <article>
                                        Clicca su <strong>"SPEDISCI"</strong> e la tua spedizione sarà presa in carico
                                        dai nostri sistemi.
                                    </article>
                                    <em>N.B. Il calcolo del preventivo basato sul listino di Poste Italiane è da considerarsi solo indicativo, e verrà confermato in sede di fatturazione.</em>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <h4>RIEPILOGO ORDINE</h4>
                                <div class="report-raccomandata">
                                    <ul>
                                        <li>Invii totali</li>
                                        <li class="numberOfNames">@Model.numberOfNames</li>
                                    </ul>
                                    <ul>
                                        <li>
                                            Tipo lettera
                                        </li>
                                        <li style="font-size:16px;">
                                            @(ViewBag.tipoLettera == null ? "Posta1" : ViewBag.tipoLettera)
                                        </li>
                                    </ul>
                                    <ul>
                                        <li>
                                            Tipo stampa
                                        </li>
                                        <li style="font-size:16px;">
                                            @(ViewBag.tipoStampa == true ? "Bianco/Nero" : "Colori")
                                        </li>
                                    </ul>
                                    <ul>
                                        <li>
                                            Fronte Retro
                                        </li>
                                        <li style="font-size:16px;">
                                            @(ViewBag.tipoStampa == true ? "Si": "No")
                                        </li>
                                    </ul>
                                    <ul>
                                        <li>Importo netto</li>
                                        <li class="importoNetto">€ @Model.importoNetto</li>
                                    </ul>
                                    <ul>
                                        <li>IVA 22%</li>
                                        <li class="importoIva">€ @Model.importoIva</li>
                                    </ul>
                                    <ul>
                                        <li>TOTALE</li>
                                        <li class="importoTotale">€ @Model.importoTotale</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2">
                    <div class="row">
                        <div class="nav-step">
                            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <a href="/">
                                            <img src="~/Images/IcnAnuullaSped.png" style="width:30px" />&nbsp;&nbsp;ANNULLA
                                        </a>
                                    </div>
                                    <div class="col-lg-6">
                                        <a href="StepEnd?id=@Model.operationId">
                                            SPEDISCI&nbsp;&nbsp;<img src="~/Images/IcnSpedisci.png" style="width:30px" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>